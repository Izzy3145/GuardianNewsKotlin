<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/article_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
            android:id="@+id/article_name"
            style="@style/name_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginEnd="16dp" android:layout_marginStart="16dp"/>

    <TextView
            android:id="@+id/article_section"
            style="@style/section_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>

</LinearLayout>